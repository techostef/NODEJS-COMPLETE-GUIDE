{
  "compilerOptions": {
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "module": "CommonJS",
    "target": "es6",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2016",
      "scripthost",
      "ESNext"
    ],
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "noLib": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    ".eslintrc.js",
  ],
  "exclude": [
    "**/__test__",
    "**/storybook",
    "node_modules"
  ],
  "types": [
    "jest",
    "@testing-library/jest-dom"
  ]
}
