extends layouts/mainLayout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")
    
block content 
  main 
    h1 My Products 
    p List of all the products...
    .grid
      if products.length > 0
        each product in products
          article.card.product-item 
            header.card__header 
              h1.product__title #{product.title}
            .card__image 
              img(src="images/book-1296045_960_720.png", alt="A Book")
            .card__content
              h2.product__price $124
              p.product__description A very interesting book about so many even more interesting things!</p>
            .card__actions
              button.btn Add to Cart
      else 
        h1 No Products
